<UserControl x:Class="FoodOnHoop.Views.AboutUs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoodOnHoop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <ImageBrush ImageSource="/Images/AboutUs.png" />
    </UserControl.Background>
    <Grid>
        <RichTextBox Foreground="FloralWhite" FontSize="14" FontStretch="Medium" Margin="400 80 80 80" Background="#FF9D9995" BorderBrush="#FF9D9995" FontFamily="Arial Narrow">
            <FlowDocument>
                <Paragraph>"Cooking is all about people.Food is maybe</Paragraph>
                <Paragraph>the only universal thing that really has the</Paragraph>
                <Paragraph>power to bring everyone together. No matter</Paragraph>
                <Paragraph>what culture, everywhere around the world,</Paragraph>
                <Paragraph>people eat together."</Paragraph>
                <Paragraph>
                    <Bold>A warm welcome to our world - Food on Hoop</Bold>
                </Paragraph>
            </FlowDocument>

        </RichTextBox>
    </Grid>
</UserControl>
