<Page x:Class="FoodOnHoop.Views.AdminOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoodOnHoop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminOrder">

    <Page.Background>
        <ImageBrush ImageSource="/Images/AdminOrder.png"/>
    </Page.Background>
    <Grid>
        <Grid Margin="50,50,350,50">
            <ListView Name="UserGrid" Background="Transparent" >
                <DataGrid Name="grdReservationList" AutoGenerateColumns="False" Width="396" Height="345" Background="Transparent">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Order ID" Width="55"  ></DataGridTextColumn>
                        <DataGridTextColumn Header="Customer Name"  ></DataGridTextColumn>
                        <DataGridTextColumn Header="Item Name"  ></DataGridTextColumn>
                        <DataGridTextColumn Header="Employee Name"  ></DataGridTextColumn>
                        <DataGridTextColumn Header="Date" ></DataGridTextColumn>
                        <DataGridTextColumn Header="Item Quantity"  ></DataGridTextColumn>
                        <DataGridTextColumn Header="Total Price"  ></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ListView>
        </Grid>
        <Button Background="Transparent" Content="👈" Foreground="White" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="40" Height="40" FontSize="24" Click="Button_Click"/>
        <Frame x:Name="Back"/>
    </Grid>
</Page>
